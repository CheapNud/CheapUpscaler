@page "/"

<PageTitle>CheapUpscaler - Home</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Welcome to CheapUpscaler</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    AI-powered video upscaling and frame interpolation using RIFE, Real-CUGAN, Real-ESRGAN, and more.
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudIcon Icon="@Icons.Material.Filled.VideoFile" Size="Size.Large" Color="Color.Primary" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Start New Upscale</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Select a video file and configure upscaling or interpolation settings.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Disabled="true">
                    New Job
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudIcon Icon="@Icons.Material.Filled.Queue" Size="Size.Large" Color="Color.Secondary" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Upscale Queue</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    View and manage pending, active, and completed upscale jobs.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.ViewList" Href="/upscale-queue">
                    View Queue
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudIcon Icon="@Icons.Material.Filled.Extension" Size="Size.Large" Color="Color.Tertiary" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Dependencies</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Check and install required tools: VapourSynth, FFmpeg, Python, TensorRT.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.CheckCircle" Href="/dependencies">
                    Check Status
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

<MudDivider Class="my-6" />

<MudText Typo="Typo.h5" GutterBottom="true">Available Upscaling Methods</MudText>

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-4">
            <MudStack Spacing="2">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Animation" Color="Color.Info" />
                    <MudText Typo="Typo.h6">RIFE Frame Interpolation</MudText>
                </MudStack>
                <MudText Typo="Typo.body2">
                    Increase video frame rate using AI. Supports 2x, 4x, 8x interpolation.
                    Uses SVP or Practical-RIFE backends with TensorRT acceleration.
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-4">
            <MudStack Spacing="2">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Color="Color.Success" />
                    <MudText Typo="Typo.h6">Real-CUGAN Upscaling</MudText>
                </MudStack>
                <MudText Typo="Typo.body2">
                    Anime/cartoon optimized AI upscaling. 2x-4x scale with noise reduction.
                    10-20x faster than Real-ESRGAN with TensorRT.
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-4">
            <MudStack Spacing="2">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.ImageSearch" Color="Color.Warning" />
                    <MudText Typo="Typo.h6">Real-ESRGAN Upscaling</MudText>
                </MudStack>
                <MudText Typo="Typo.body2">
                    General-purpose AI upscaling for any content type. Multiple models available.
                    Best quality but slower processing.
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-4">
            <MudStack Spacing="2">
                <MudStack Row="true" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Speed" Color="Color.Default" />
                    <MudText Typo="Typo.h6">Non-AI Upscaling</MudText>
                </MudStack>
                <MudText Typo="Typo.body2">
                    Fast traditional algorithms: Lanczos, xBR, HQx.
                    Near real-time processing, ideal for pixel art or quick previews.
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>
</MudGrid>
