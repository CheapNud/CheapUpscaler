@page "/dependencies"
@using CheapUpscaler.Blazor.Models
@using CheapUpscaler.Blazor.Services
@using CheapUpscaler.Blazor.Components.Shared
@inject DependencyChecker DependencyChecker
@inject ISnackbar Snackbar

<PageTitle>Dependencies - CheapUpscaler</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Dependency Manager</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    Check and manage external dependencies required for video upscaling and frame interpolation.
</MudText>

@if (_isLoading)
{
    <MudProgressLinear Indeterminate="true" Color="Color.Primary" Class="mb-4" />
    <MudStack Spacing="2">
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="120px" />
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="300px" />
    </MudStack>
}
else if (_status != null)
{
    <!-- Overall Status Card -->
    <MudCard Class="mb-4">
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" md="8">
                    <MudStack Spacing="2">
                        <MudText Typo="Typo.h6">Overall Status</MudText>
                        <MudText Typo="Typo.body1">@_status.SummaryMessage</MudText>
                        <MudStack Row="true" Spacing="2">
                            <MudChip T="string" Size="Size.Small" Color="Color.Info">
                                @_status.InstalledCount / @_status.TotalCount installed
                            </MudChip>
                            @if (_status.AllRequiredInstalled)
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle">
                                    Core Ready
                                </MudChip>
                            }
                            else
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Error" Icon="@Icons.Material.Filled.Warning">
                                    Missing Required
                                </MudChip>
                            }
                        </MudStack>
                    </MudStack>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudStack AlignItems="AlignItems.Center">
                        <MudProgressCircular Value="@_status.HealthPercentage"
                                             Color="@GetHealthColor()"
                                             Size="Size.Large"
                                             StrokeWidth="6">
                            <MudText Typo="Typo.h5">@_status.HealthPercentage%</MudText>
                        </MudProgressCircular>
                        <MudText Typo="Typo.caption">Health Score</MudText>
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Refresh"
                       OnClick="@RefreshAsync"
                       Disabled="@_isLoading">
                Refresh Status
            </MudButton>
        </MudCardActions>
    </MudCard>

    <!-- Tabbed Dependency Lists -->
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-4">
        <MudTabPanel Text="Required"
                     Icon="@Icons.Material.Filled.Warning"
                     BadgeData="@(_status.AllRequiredInstalled ? null : _status.Required.Count(d => !d.IsInstalled))"
                     BadgeColor="@(_status.AllRequiredInstalled ? Color.Success : Color.Error)">
            @if (!_status.Required.Any())
            {
                <MudAlert Severity="Severity.Info">No required dependencies defined.</MudAlert>
            }
            else
            {
                <MudStack Spacing="2">
                    @foreach (var dep in _status.Required)
                    {
                        <DependencyListItem Dependency="@dep" />
                    }
                </MudStack>
            }
        </MudTabPanel>

        <MudTabPanel Text="Recommended"
                     Icon="@Icons.Material.Filled.Star"
                     BadgeData="@(_status.Recommended.Any(d => !d.IsInstalled) ? _status.Recommended.Count(d => !d.IsInstalled) : null)"
                     BadgeColor="Color.Warning">
            @if (!_status.Recommended.Any())
            {
                <MudAlert Severity="Severity.Info">No recommended dependencies defined.</MudAlert>
            }
            else
            {
                <MudStack Spacing="2">
                    @foreach (var dep in _status.Recommended)
                    {
                        <DependencyListItem Dependency="@dep" />
                    }
                </MudStack>
            }
        </MudTabPanel>

        <MudTabPanel Text="Optional"
                     Icon="@Icons.Material.Filled.Extension"
                     BadgeData="@(_status.Optional.Any(d => !d.IsInstalled) ? _status.Optional.Count(d => !d.IsInstalled) : null)"
                     BadgeColor="Color.Default">
            @if (!_status.Optional.Any())
            {
                <MudAlert Severity="Severity.Info">No optional dependencies defined.</MudAlert>
            }
            else
            {
                <MudStack Spacing="2">
                    @foreach (var dep in _status.Optional)
                    {
                        <DependencyListItem Dependency="@dep" />
                    }
                </MudStack>
            }
        </MudTabPanel>

        <MudTabPanel Text="All" Icon="@Icons.Material.Filled.List">
            <MudStack Spacing="2">
                @foreach (var dep in _status.AllDependencies.OrderBy(d => d.Category).ThenBy(d => d.Name))
                {
                    <DependencyListItem Dependency="@dep" />
                }
            </MudStack>
        </MudTabPanel>
    </MudTabs>
}

@code {
    private DependencyStatus? _status;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await RefreshAsync();
    }

    private async Task RefreshAsync()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _status = await DependencyChecker.CheckAllDependenciesAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error checking dependencies: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private Color GetHealthColor()
    {
        if (_status == null) return Color.Default;

        return _status.HealthPercentage switch
        {
            >= 90 => Color.Success,
            >= 70 => Color.Info,
            >= 50 => Color.Warning,
            _ => Color.Error
        };
    }
}
